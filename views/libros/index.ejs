<%- include ../layouts/cabecera.ejs %>

    <a href='/libros/crear' class='btn btn-primary mt-5' type='button'> Crear un libro </a>
    <div class="container">
        

        <table class="table table-ligth mt-5">
            <thead class="thead-ligth">
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Imagen</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>

                <% for( let libro=0; libro < libros.length; libro++ ) { %>

                    <tr>
                        <td>
                            <%=libros[libro].id%>
                        </td>
                        <td>
                            <%=libros[libro].nombre%>
                        </td>
                        <td>
                            <img class="img-thumbnail" width="100" src="/images/<%=libros[libro].imagen%>" alt="">

                        </td>
                        <td>
                            <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                                <form class="form-inline" method="get" action="/libros/editar/<%=libros[libro].id%>">

                                    <button class="btn btn-outline-warning"
                                        type="submit"><i class="fa-solid fa-pen-to-square"></i>Editar</button>

                                </form>
                            </div>

                            |

                            <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                                <form class="form-inline" method="post" action="/libros/eliminar/<%=libros[libro].id%>">

                                    <button class="btn btn-outline-danger" type="submit"> Borrar</button>

                                </form>
                            </div>
                        </td>



                    </tr>

                    <% } %>

            </tbody>
        </table>
    </div>
    <%- include ../layouts/pie.ejs %>