<%- include ../layouts/cabecera.ejs %>
    <!-- "multipart/form-data" es para poder adjuntar la foto del archivo-->
    <div class="container d-flex justify-content-center">

        <div class="card">
            <div class="card-header">
                Formulario de captura
            </div>
            <div class="card-body">
                <h5 class="card-title">Datos de tarjetas</h5>
                <p class="card-text">

                <form method="post" action="../actualizar/" enctype="multipart/form-data">
                    <label>Id</label>
                    <input type="number" name="id" value="<%=libro.id%>">

                    <div class="form-group">
                        <label>Nombre</label>
                        <input id="my-input" class="form-control" type="text" value="<%=libro.nombre%>"
                            name="nombre"></input>
                    </div>


                    <div class="form-group">
                        <label for="my-input"> Imagen </label>
                        <input type="file" class="form-control-file" name="archivo" id="my-input">
                        <img class="img-thumbnail" src="../../images/<%=libro.imagen%>" width="100" alt="">
                    </div>

                    <div class="col-md-3 mb-1">
                        <button class="btn btn-primary" type="submit">Guardar</button>


                </form>
                </p>
            </div>
        </div>

    </div>
    <%- include ../layouts/pie.ejs %>