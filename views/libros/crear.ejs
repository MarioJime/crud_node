<%- include ../layouts/cabecera.ejs %>
  <!-- "multipart/form-data" es para poder adjuntar la foto del archivo-->
  <div class="container d-flex justify-content-center">

    <div class="card">
      <div class="card-header">
        Formulario de captura
      </div>
      <div class="card-body">
        <h5 class="card-title">Datos de tarjetas</h5>
        <p class="card-text">

        <form method="post" action="/libros" enctype="multipart/form-data">
          <div class="form-group">

            <label for="my-input">Nombre</label>
            <input id="my-input" class="form-control" type="text" name="nombre"></input>
          </div>


          <div class="form-group">

            <label for="my-input"> Imagen </label>
            <input type="file" class="form-control-file" name="archivo" id="my-input">
          </div>

         
            <button class="btn btn-success" type="submit">Guardar</button>
            <button class="btn btn-danger" type="submit">Cancelar</button>
         
      
        </form>

        </p>
      </div>

    </div>
  </div>
  <%- include ../layouts/pie.ejs %>